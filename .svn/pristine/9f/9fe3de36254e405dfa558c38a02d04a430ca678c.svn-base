package eBastaTestingClasses;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
/*******************************************************
 *  Class name: GetWebDriver
 *  @author Vishal Patil
 *  @version 1.0
 *  @since 2016-06-08
 *  Methods:
 *  	1)getDriver
 *  @Functionality: To create and return the instance of
 *  		selenium web driver. 
 *  @Visibility:Public
 *******************************************************/
public class GetWebDriver 
{
	static WebDriver webDriver = new FirefoxDriver();
	
	/**
	 *  Method name: getDriver
	 *  @Functionality: Returns the static web driver instance 
	 *				   to calling class.
	 *	@return webDriver
	 *			Returns the instance of web driver. 
	 *  @Visibility: Public
	 */
	public static WebDriver getDriver()
	{
		return webDriver;
	}
	
}
